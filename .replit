
modules = ["python-3.12"]

[nix]
channel = "stable-24_05"

[workflows]

[workflows.runBot]
name = "Run Bot"
author = "agent"

[workflows.runBot.metadata]
agentRequireRestartOnSave = false

[workflows.runBot.tasks]

[workflows.runBot.tasks.runbot]
name = "runbot"
runInBackground = true

[workflows.runBot.tasks.runbot.exec]
program = "python"
args = ["main.py"]

[workflows.runWebInterface]
name = "Run Web Interface"
author = "agent"

[workflows.runWebInterface.metadata]
agentRequireRestartOnSave = false

[workflows.runWebInterface.tasks]

[workflows.runWebInterface.tasks.runweb]
name = "runweb"
runInBackground = true

[workflows.runWebInterface.tasks.runweb.exec]
program = "python"
args = ["web_interface.py"]

[workflows."Run Bot Fixed"]
name = "Run Bot Fixed"
author = "agent"

[workflows."Run Bot Fixed".metadata]
agentRequireRestartOnSave = false

[workflows."Run Bot Fixed".tasks]

[workflows."Run Bot Fixed".tasks.bot]
name = "bot"
runInBackground = false

[workflows."Run Bot Fixed".tasks.bot.exec]
program = "python"
args = ["main.py"]

[deployment]
run = ["python", "main.py"]
deploymentTarget = "autoscale"

[[ports]]
localPort = 5000
externalPort = 80
